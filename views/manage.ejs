<%- include('./components/head.ejs') -%>

<div class="container margin-top30">
  <h1>Manage</h1>
  <% if (reservation.kenteken) { %>
  <p>Het overzicht van plekken</p>
  <section>
    <ul>
      <li class="manageData">
        <form action="/delete" method="post" class="managePage" name="checkTime" id="checkTime">
          <div class="manageDatasection1">
            <p><%= reservation.email %></p>
            <p>Kenteken: <%= reservation.kenteken %></p>
            <input type="number" name="code" value="<%= reservation.code %>" hidden>
          </div>
          <div class="manageDatasection2">
            <p>Om: <%= reservation.time %> - <%= reservation.date %></p>
            <input type="submit" value="Verwijder" class="verwijderBtn">
          </div>
        </form>
      </li>
    </ul>
  </section>
  <%} else {%> <h3>Er zijn geen reserveringen meer met deze kenteken + e-mail combinatie</h3> <%}%>
</div>

<%- include('./components/footer.ejs') -%>